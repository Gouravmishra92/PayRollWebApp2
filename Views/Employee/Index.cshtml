@model IEnumerable<PayrollWebApp.Models.Employee>

@{
    ViewData["Title"] = "Employee Directory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="bi bi-people-fill"></i> Employee Directory
        </h2>

        <div>
            <a asp-controller="Payroll" asp-action="Index" class="btn btn-outline-success me-2 shadow-sm">
                <i class="bi bi-cash-stack"></i> Payroll
            </a>
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                <i class="bi bi-person-plus"></i> Add Employee
            </a>
        </div>
    </div>

    <!-- Employee Table -->
    <div class="card shadow-lg border-0 rounded-4 bg-light bg-opacity-75">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Net Salary (₹)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr class="hover-row">
                                <td>@emp.Id</td>
                                <td class="fw-semibold">@emp.Name</td>
                                <td><span class="badge bg-info text-dark px-3 py-2">@emp.Department</span></td>
                                <td>@emp.Designation</td>
                                <td class="fw-bold text-success">₹@emp.NetSalary.ToString("N2")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@emp.Id" class="btn btn-sm btn-outline-info"><i class="bi bi-eye"></i></a>
                                        <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-square"></i></a>
                                        <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                        <a asp-controller="Payroll" asp-action="GeneratePayslip" asp-route-id="@emp.Id" class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-cash-coin"></i> Generate Payslip
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <p class="text-muted fs-5"><i class="bi bi-emoji-frown"></i> No employees found.</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">
                        <i class="bi bi-person-plus"></i> Add First Employee
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-row:hover {
        background-color: #eaf5ff !important;
        transition: all 0.2s ease-in-out;
    }
    .card { backdrop-filter: blur(6px); }
    .btn-group .btn:hover { transform: scale(1.1); }
</style>
