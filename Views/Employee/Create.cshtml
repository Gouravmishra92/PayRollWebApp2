@model PayrollWebApp.Models.Employee
@{
    ViewData["Title"] = "Add Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4 bg-light bg-opacity-75">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-plus"></i> Add New Employee</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post" class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter employee name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Department" class="form-label fw-semibold"></label>
                    <input asp-for="Department" class="form-control" placeholder="Enter department" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Designation" class="form-label fw-semibold"></label>
                    <input asp-for="Designation" class="form-control" placeholder="Enter designation" />
                </div>
                <div class="col-md-6">
                    <label asp-for="BasicSalary" class="form-label fw-semibold"></label>
                    <input asp-for="BasicSalary" type="number" step="0.01" class="form-control" placeholder="Basic salary" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Allowances" class="form-label fw-semibold"></label>
                    <input asp-for="Allowances" type="number" step="0.01" class="form-control" placeholder="Allowances" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Deductions" class="form-label fw-semibold"></label>
                    <input asp-for="Deductions" type="number" step="0.01" class="form-control" placeholder="Deductions" />
                </div>
                <div class="col-md-6">
                    <label asp-for="JoiningDate" class="form-label fw-semibold"></label>
                    <input asp-for="JoiningDate" type="date" class="form-control" />
                </div>

                <div class="d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-success me-2"><i class="bi bi-check-circle"></i> Save</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
