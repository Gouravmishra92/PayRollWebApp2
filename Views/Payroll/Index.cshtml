@model IEnumerable<PayrollWebApp.Models.SalaryRecord>

@{
    ViewData["Title"] = "Payroll Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 bg-light bg-opacity-75">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-success mb-0"><i class="bi bi-cash-stack"></i> Payroll Dashboard</h2>
                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-people"></i> Go to Employees
                </a>
            </div>
            <hr />

            @if (Model != null && Model.Any())
            {
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-success">
                        <tr>
                            <th>ID</th>
                            <th>Employee</th>
                            <th>Department</th>
                            <th>Designation</th>
                            <th>Month</th>
                            <th>Net Salary (₹)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model)
                        {
                            <tr>
                                <td>@record.Id</td>
                                <td>@record.EmployeeName</td>
                                <td>@record.Department</td>
                                <td>@record.Designation</td>
                                <td>@record.Month</td>
                                <td class="fw-bold text-success">₹@record.NetSalary.ToString("N2")</td>
                                <td>
                                    <a asp-action="Payslip" asp-route-id="@record.EmployeeId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-receipt"></i> View Payslip
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-emoji-frown fs-1 text-muted"></i>
                    <h5 class="mt-3 text-secondary">No payroll records found</h5>
                    <p class="text-muted">Generate payslips from Employee section.</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-success mt-2">
                        <i class="bi bi-person-plus"></i> Go to Employees
                    </a>
                </div>
            }
        </div>
    </div>
</div>
